<h1>countries visited</h1>

<div class="countries-container">
  <% @country.each do |country| %>

  <div class = "country-container">
    <h3><a href="/cities_visited/<%= country.id %>"><%= country.name.capitalize %></a></h3>
    <p><%= country.description %></p>
    <form action="/countries_visited/<%= country.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
    <form action="/countries_visited/<%= country.id %>/edit_country_v"><input type="submit" value="edit"></form>
  </div>

  <% end %>
</div>

<a href="/add_country_to_visited">add new country</a>
